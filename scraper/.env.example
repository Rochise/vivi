# Configuration Email pour les notifications
# Copiez ce fichier en .env et remplissez vos informations

# Configuration SMTP (Gmail exemple)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre.email@gmail.com
SMTP_PASS=votre_mot_de_passe_application

# Email destinataire des notifications
NOTIFICATION_EMAIL=votre.email@gmail.com

# Intervalle de scraping en minutes (60 = 1 heure)
SCRAPE_INTERVAL_MINUTES=60

# Mode debug (true/false)
DEBUG=false
